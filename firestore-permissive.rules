rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras temporárias para teste - permitir acesso total aos dados do usuário
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Subcoleções do usuário - acesso total ao próprio usuário
      match /{subcollection=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Permitir leitura de dados públicos (se houver)
    match /public/{document=**} {
      allow read: if true;
    }
  }
}